# ============================================================
#  moltraffle-mainnet — Base Mainnet Environment Variables
#  Copy this to .env and fill in all values before deploying
# ============================================================

# ------------------------------------------------------------
# DEPLOYER WALLET (never commit the real .env)
# ------------------------------------------------------------
PRIVATE_KEY=0x<your-deployer-wallet-private-key>

# ------------------------------------------------------------
# RPC (optional — defaults to public Base endpoint if omitted)
# ------------------------------------------------------------
BASE_RPC_URL=https://mainnet.base.org

# ------------------------------------------------------------
# CHAINLINK VRF — Base Mainnet
# Get coordinator + key hash from: https://docs.chain.link/vrf/v2-5/supported-networks
# Create subscription at: https://vrf.chain.link/
# ------------------------------------------------------------
VRF_COORDINATOR_BASE_MAINNET=0xd5D517aBE5cF79B7e95eC98dB0f0277788aFF634
VRF_KEY_HASH_BASE_MAINNET=<500-gwei-key-hash-from-chainlink-docs>
VRF_SUBSCRIPTION_ID_MAINNET=<your-subscription-id>

# ------------------------------------------------------------
# CONTRACT VERIFICATION (Basescan)
# Get API key at: https://basescan.org/myapikey
# ------------------------------------------------------------
BASESCAN_API_KEY=<your-basescan-api-key>

# ------------------------------------------------------------
# FRONTEND — NEXT.JS PUBLIC VARS
# ------------------------------------------------------------
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=<your-walletconnect-project-id>
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
